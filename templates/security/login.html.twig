{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="d-flex h-100 align-items-center justify-content-center">
        <form class="w-25 border border-dark bg-light rounded p-4" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="d-flex align-items-center justify-content-center h3 mb-3 font-weight-normal">Please sign in</h1>
            <label class="d-flex align-items-center justify-content-center " for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="d-flex mt-2 align-items-center justify-content-center" for="inputPassword">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="d-flex align-items-center justify-content-center" >
                <button class="btn mt-3  btn-outline-dark" type="submit">
                    Sign in
                </button>
            </div>

        </form>
    </div>
{% endblock %}
