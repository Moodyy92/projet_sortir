<!DOCTYPE html>
<html class="h-100">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}
        {% endblock %}


    </head>
                        <!------------------------------------------------->
                        <!---------------------NAV BAR--------------------->
                        <!------------------------------------------------->
    <body class="d-flex flex-column h-100 text-dark">
        {% if app.user %}
        <header>
{#            {% include "./partials/navbarV1.html.twig" %}#}
            {% include "./partials/navbarV2.html.twig" %}
        </header>
        {% endif %}
                        <!------------------------------------------------->
                        <!-----------------------BODY---------------------->
                        <!------------------------------------------------->
        <div class="container flex-grow-1 text-white ">
            {% block body %}{% endblock %}
        </div>
                        <!------------------------------------------------->
                        <!----------------------FOOTER--------------------->
                        <!------------------------------------------------->
        <footer>
            <div>
                <p class="d-flex justify-content-center w-100" id="copyright">&copy;Eni - Projet 'Sortir'
                    {{ "now" |date('Y') }} <br>
                </p>
            </div>
        </footer>

        {{ encore_entry_script_tags('app') }}
        {% block javascripts %}
        {% endblock %}
    </body>
</html>
