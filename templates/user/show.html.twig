{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <table class="table">
        <tbody>
             <tr>
                <th>Prenom</th>
                <td>{{ participant.prenom }}</td>
             </tr>
             <tr>
                <th>Nom</th>
                <td>{{ participant.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ participant.telephone }}</td>
            </tr>
             <tr>
                 <th> Campus</th>
                 <td> {{ participant.campus.nom }}</td>
             </tr>

            <tr>
                <th>Date de création du compte</th>
                <td>{{ participant.createdAt ? participant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
<div>
    <a href="{{ path('user_index') }}">Revenir à la liste des membres</a> </br>

{% if (participant==app.user) %}


 <a href="{{ path('user_edit', {'id': participant.id}) }}">Modifier mon Profil</a>

    {{ include('user/_delete_form.html.twig') }}
{% endif %}


{% endblock %}
